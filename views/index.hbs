<div class="container-fluid flex-container" style="padding: 0px;">
  {{!-- main MAP --}}
  <div class="img-cont" id="img-cont">
      {{!-- <img src="/images/map.png" alt="maps" class="map-img"> --}}
      {{!-- <div class="backgroundImage"></div> --}}

    <div class="flex-login" id="register-login">
        {{!-- firing login button --}}
        <div class="login" id="login">
          <a href="/login"><button type="button" class="btn btn-info login-btns">{{loginName}}</button></a>
        </div>
      {{!-- firing 'register' button --}}
      {{#unless loginStatus}}
        <div class="register" id="register">
          <a href="/register"><button type="button" class="btn btn-info login-btns">Register</button></a>
        </div>
      {{/unless}}
    </div>  
    {{!-- firing 'upload-problem form' button --}}
    <div class="mainBtn" id="mainBtn">
      <button type="button" data-toggle="modal" data-target="#myModal" class="prblm-btn btn-lg">
        Upload Problem
      </button>
    </div>
  </div>
</div>

  

  {{!-- problem upload modal start --}}
  <div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header bg-success">
        <h3>Enter Detail About Your Problem</h3>
        <button type="button" id="close" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        {{!-- problem upload form --}}
        <div class="container">
          <form action="/lookup" method="post" enctype="multipart/form-data" role="form" id="prblm_taking_form">
            <div class="form-group">
              <strong><label>Problem Type:</label></strong>
              <select name="problem_type" id="problem_type" class="form-control">
                <option value="street_light">Street Ligth</option>
                <option value="road_maintenance">Road Maintenance</option>
                <option value="drainage_system">Drainage System</option>
              </select>
            </div>
            {{!-- upload image input --}}
            <strong><p>Upload Image:</p></strong>
            <div class="custom-file">
              <strong><label id="uploadLabelId" class="custom-file-label">Upload Image of the problem</label></strong>
              <input type="file" name="problem_image" class="custom-file-input" id="problem_image">
              <div class="d-inline-flex p-1 bg-info text-white" id="fileUpInfo">
                Only .jpg, .jpeg, .png file supported and file-size must be less than 1 MB
              </div>
            </div>
            {{!-- problem location button --}}
            <div style="margin-top: 2.5%;">
              <strong><label id="locationChooseLabel" for="location-choose-btn">Choose Problem Location From Map:</label></strong> <br>
               {{!-- users location --}}
              <button type="button" class="btn btn-secondary btn-block" id="choose-location-btn" style="margin-top: 0.5%;">Choose Location</button>
              <div class="d-inline-flex p-2 bg-info text-white" style="margin-top: 2%;" id="user-location">
                <div>
                  <label for="latitude">Latitude</label>
                  <input type="text" name="latitude" id="latitude">
                </div>
                <pre>   </pre>
                <div>
                  <label for="longitude">Longitude</label>
                  <input type="text" name="longitude" id="longitude">
                </div>
              </div>
              
            </div>
          </form>
        </div>
      </div>
      {{!-- modal footer --}}
      <div class="modal-footer">
        <div class="container">
          <button type="submit" style="margin-left: 45%;" form="prblm_taking_form" formaction="/lookup" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </div>
  </div>
</div>
{{!-- modal ends here --}}







